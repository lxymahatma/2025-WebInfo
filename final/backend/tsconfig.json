{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "types/*": [
        "types/*"
      ],
      "types": [
        "types"
      ],
      "routes/*": [
        "routes/*"
      ],
      "routes": [
        "routes"
      ],
      "utils/*": [
        "utils/*"
      ],
      "utils": [
        "utils"
      ],
      "middleware/*": [
        "middleware/*"
      ],
      "middleware": [
        "middleware"
      ]
    }
  },
  "include": [
    "*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}